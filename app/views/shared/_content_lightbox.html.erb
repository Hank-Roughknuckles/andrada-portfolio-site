<% if local_assigns.has_key? :edit_page %>
  <% if edit_page == true %>
    <% edit_page = true %>
  <% else %>
    <% edit_page = false %>
  <% end %>
<% else %>
  <% edit_page = false %>
<% end %>

<div class="content_detail content_<%= content.id %>">
  <% if !edit_page %>
    <button class="close">
      <%= image_tag "close_button.png", size: "48" %> 
    </button>
  <% end %>

  <div class="lightbox_main">
    <%= render "shared/embedded_video", :content => content %>

    <% if user_signed_in? && edit_page == false %>
      <div class="lightbox_edit_link">
        <% if content.class.table_name == "works" %>
          <%= link_to "Edit Item", edit_work_path(content) %>
        <% else %>
          <%= link_to "Edit Item", edit_current_project_path(content) %>
        <% end %>
      </div>
    <% end %>
  </div>


  <% if edit_page == true %>
    <%= render "shared/content_detail_form", :content => content,
      :header_limit => 30, :description_limit => 200 %>
  <% else %>
    <%= render "shared/content_detail_display", :content => content %>
  <% end %>
</div>

<% if edit_page == true %>
  <%= form_for @content do |f| %>
    <div class="fake_link">
      Change media content
    </div>
    <div class="invisible media_content_lightbox">
      <%= f.radio_button :media_choice, "link", id: 'media_choice_radio_link' %>
      <%= f.label :media_choice_link, "Use Hosted Link" %>
      <%= f.label :media_link %>
      <%= f.text_field :media_link , id: "media_link_input" %>

      <%= f.radio_button :media_choice, "upload", id: 'media_choice_radio_upload' %>
      <%= f.label :media_choice_upload, "Use File Upload" %>
      <%= f.label :media_image %>
      <%= f.file_field :media_image, id: "media_image_upload" %>
    </div>
  <% end %>
<% end %>
