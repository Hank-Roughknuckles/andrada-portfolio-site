<% header_limit = 50 %>
<% description_limit = 250 %>

<%= form_for @content, :html => {:id => "content_form"} do |f| %>
  <%= render "shared/default_record_form", :f => f, 
                                           :header_limit => header_limit, 
                                           :description_limit => description_limit  %>

  <%= f.label :progress, "Progress (%)" %>
  <%= f.number_field :progress, min: 0, max: 100, step: 1 %>

  <%= render "shared/grid_content_form", :f => f %>
<% end %>

<%= submit_tag "Save", type: 'button', id: "save_position_and_content_forms" %>
