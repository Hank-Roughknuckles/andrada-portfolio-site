<% provide( :title, "Edit Project" ) %>

<%= render "project_content", :project => @project %>

<%= form_for @project do |f| %>
  <%= f.label :header %>
  <%= f.text_field :header %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.radio_button :media_choice, "link" %>
  <%= f.label :media_choice_link, "Use Hosted Link" %>
  <%= f.label :media_link %>
  <%= f.text_field :media_link %>

  <%= f.radio_button :media_choice, "upload" %>
  <%= f.label :media_choice_upload, "Use File Upload" %>
  <%= f.label :media_image %>
  <%= f.file_field :media_image, id: "media_image_upload" %>

  <%= f.label :progress, "Progress (%)" %>
  <%= f.number_field :progress, min: 0, max: 100, step: 1 %>

  <%= f.submit "Save" %>
<% end %>
