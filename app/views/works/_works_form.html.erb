<% header_limit = 50 %>
<% description_limit = 250 %>

<%= form_for @content do |f| %>
  <%= render "shared/default_record_form", 
    :f => f, 
    :header_limit => header_limit, 
    :description_limit => description_limit %>

  <%= f.label :grid_tile_image %>
  <%= f.file_field :grid_tile_image, id: "grid_tile_image", class: "grid_tile_image_upload" %>

  <%= f.label :grid_row %>
  <%= f.number_field :grid_row, min: 0, max: 3, step: 1 %>

  <%= f.label :grid_column %>
  <%= f.number_field :grid_column, min: 0, max: 3, step: 1 %>

  <%= f.label :grid_sizex, "Tile size (horizontal)" %>
  <%= f.number_field :grid_sizex, min: 0, max: 3, step: 1 %>

  <%= f.label :grid_sizey, "Tile size (vertical)" %>
  <%= f.number_field :grid_sizey, min: 0, max: 3, step: 1 %>

  <%= render "shared/crop_image_popup", :f => f %>

  <%= f.submit "Save", class: "btn save" %>
<% end %>
