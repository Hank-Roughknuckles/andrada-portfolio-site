<%# The Slide Preview %>

<% for content in @contents %>
  <li class="slide" style="<%= get_slide_background_css content.id %>;
    <%= "display: none" if content.id != @active_content_id %>">

    <a name="slides"></a>
    <a href="#slides">
      <div class="frame frame_left prev_control">
        <div class="frame_arrow">&lt;</div>
      </div>
    </a>

    <div class="slide_box description_box">
      <div class="slide_header" id="header_preview">
        <%= content.header %>
      </div>

      <div class="slide_description" id="description_preview">
        <%= content.description %>
      </div>
    </div>

    <% left_slide = AboutMeContent.find((content.id - 1) % @count) %>
    <a href="#slides">
      <div class="direction_button prev_control">
        <div class="left_arrow">&lt;</div>
        <div class="left_button_text">
          <%= left_slide.button_title %>
        </div>
      </div>
    </a>

    <% right_slide = AboutMeContent.find((content.id + 1) % @count) %>
    <a href="#slides">
      <div class="direction_button next_control">
        <div class="right_button_text">
          <%= right_slide.button_title %>
        </div>
        <div class="arrow_button right_arrow">&gt;</div>
      </div>
    </a>

    <a href="#slides">
      <div class="frame frame_right next_control">
        <div class="frame_arrow">&gt;</div>
      </div>
    </a>
  </li>
<% end %>
