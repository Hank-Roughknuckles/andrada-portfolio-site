<% provide( :title, "About Me" ) %>

<ul class="slider">
  <% for content in @contents %>
    <%= render "slide", :content => content %>
  <% end %>
</ul>

<% if user_signed_in? %>
  <span class="edit_content">
    <%= link_to "Edit Slider Content", :action => "admin_index" %>
  </span>
<% end %>

<!-- to add space below the absolutely positioned slider -->
<div class="spacer"></div>
