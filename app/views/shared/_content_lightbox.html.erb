<div class="content_detail content_<%= content.id %>">
  <button class="close">
    <%= image_tag "close_button.png", size: "48" %> 
  </button>

  <div class="lightbox_main">
    <%= render "shared/embedded_video", :content => content %>

    <% if user_signed_in? %>
      <div class="lightbox_edit_link">
        <% if content.class.table_name == "works" %>
          <%= link_to "Edit Item", edit_work_path(content) %>
        <% else %>
          <%= link_to "Edit Item", edit_current_project_path(content) %>
        <% end %>
      </div>
    <% end %>
  </div>


  <% if local_assigns.has_key? :edit_page %>
    <% if edit_page == true %>
      <%= render "shared/content_detail_form", :content => content %>
    <% else %>
      <%= render "shared/content_detail_display", :content => content %>
    <% end %>

  <% else %>
    <%= render "shared/content_detail_display", :content => content %>
  <% end %>
</div>
