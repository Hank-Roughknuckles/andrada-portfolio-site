<div class="envelope" 
  style="<%= get_background_css Contact, @contact_info.id %>">

  <h3>Leave a message <span class="fake_link">here</span></h3>
  <br />
  <h2>Or find me on:</h2>

  <div class="contact_content">
    <%# Render a form if it's the edit page %>
    <% if request.original_url =~ /edit/ %>
      <%= form_for @contact_info do |f| %>
        <div class="gmail">
          <%= image_tag "gmail_icon.png", size: "48" %> 
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>

        <div class="vimeo">
          <%= image_tag "vimeo_icon.png", size: "48" %> 
          <%= f.label :vimeo_id, "Vimeo ID" %>
          <%= f.text_field :vimeo_id %>
        </div>

        <div class="facebook">
          <%= image_tag "fb_icon.png", size: "48" %> 
          TODO: put facebook info here
        </div>

        <%= f.label :background_image %>
        <%= f.file_field :background_image, 
          id: "background_image_upload" %>
        <%= render "shared/dimension_message" %>

        <%= f.submit "Save" %>
      <% end %>


    <%# Render a normal display if it's not the edit page %>
    <% else %>
      <div class="gmail">
        <%= image_tag "gmail_icon.png", size: "48" %> 
        <%= @contact_info.email %>
      </div>

      <div class="vimeo">
        <%= image_tag "vimeo_icon.png", size: "48" %> 
        <%= @contact_info.vimeo_id %>
      </div>

      <div class="facebook">
        <%= image_tag "fb_icon.png", size: "48" %> 
        TODO: put facebook info here
      </div>
    <% end %>
  </div>

</div> <!-- END envelope div -->
