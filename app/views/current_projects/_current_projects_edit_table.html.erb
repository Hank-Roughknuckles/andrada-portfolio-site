<%# Contains table for displaying all the works to the admin so that
  he/she can get a quick overview of all of them %>

<table border="1" class="edit_table">
  <tr>
    <th></th>
    <th>Media Link</th>
    <th>Header</th>
    <th>Description</th>
    <th>Progress</th>
  </tr>
<% for content in @contents %>
  <tr>
    <% if content.media_choice == "link" %>
      <td><%= embed_media( link: content.media_link, width: 200, height: 100 ) %></td>
    <% else %>
      <td><%= embed_media( uploaded_image_url: content.media_image.url, width: "200", height: "100" ) %></td>
    <% end %>
    <td><%= content.media_link %></td>
    <td><%= content.header %></td>
    <td><%= content.description %></td>
    <td><%= content.progress %></td>
    <td><%= link_to "Edit", edit_current_project_path(content), id: "edit_current_project_#{content.id}" %></td>
    <td><%= button_to "Delete", content, method: "delete", id: "delete_work_#{content.id}" %></td>
  </tr>
<% end %>
</table>
